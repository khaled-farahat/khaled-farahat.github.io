---
import Sidebar from "../components/Sidebar.astro";
import BottomNav from "../components/BottomNav.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-neutral-900 flex flex-col h-screen text-white">
    <div class="flex-1 grid grid-cols-10 lg:grid-cols-8">
      <!-- Main Content Area -->
      <div class="col-span-10 md:col-span-8 lg:col-span-7 p-4">
        Main Content
        <p>heloo</p>
        <p>heloo</p>
        <p>heloo</p>
        <p>heloo</p>
        <p>heloo</p>
        <p>heloo</p>
        <p>heloo</p>
        <p>heloo</p>
        <slot />
      </div>
      <!-- Sidebar -->
      <div
        class="hidden md:flex col-span-0 md:col-span-2 lg:col-span-1 bg-transparent h-full text-white"
      >
        <Sidebar />
      </div>
      <!-- Bottom Navigation -->
      <div
        class="col-span-8 md:hidden fixed bottom-0 left-0 right-0"
      >
       <BottomNav />
      </div>
    </div>
  </body>
</html>
<style is:global></style>
