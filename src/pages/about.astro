---
import { Icon } from "astro-icon/components";
import PageHeader from "../components/PageHeader.astro";
import Layout from "../layouts/Layout.astro";
import InfoItem from "../components/InfoItem.astro";
import BoxStat from "../components/BoxStat.astro";
import SkillsScroller from "../components/SkillsScroller.astro";
---

<Layout title="about">
  <PageHeader title="About Me" bgText="About" />
  <div class="flex flex-col mt-8 gap-6">
    <div class="flex flex-col gap-6 md:flex-row md:justify-evenly md:items-center">
      <div class="flex flex-col gap-4 justify-center items-center">
        <h2 class="text-2xl uppercase">Personal Info</h2>
        <div class="flex gap-12 justify-center items-center">
          <div class="flex flex-col gap-6">
            <InfoItem name="First Name" value="Khaled" />
            <InfoItem name="Nationality" value="Egyptien" />
            <InfoItem name="address" value="Egypt" />
          </div>

          <div class="flex flex-col gap-6">
            <InfoItem name="Last Name" value="Mostafa" />
            <InfoItem name="age" value="22" />
            <InfoItem name="phone" value="01113411222" />
          </div>
        </div>
        <div
          class="flex items-center gap-3 border relative border-amber-500 rounded-3xl pl-4 md:self-end cursor-pointer
                before:h-full before:w-0 before:block before:absolute before:bg-amber-500 before:-z-10 before:right-0 before:top-0 before:transition-all hover:before:w-full
                before:rounded-3xl"
        >
          <p>Download CV</p>
          <div
            class="w-10 h-10 rounded-full bg-amber-500 p-3 flex justify-center items-center"
          >
            <Icon name="IcRoundDownload" class="text-2xl" />
          </div>
        </div>
      </div>
      <div class="flex flex-col gap-4 justify-center items-center">
        <div class="flex gap-4">
          <BoxStat name="Experience" value="2" />
          <BoxStat name="projects" value="30" />
        </div>
        <!-- <div class="flex gap-4">
          <BoxStat name="Experience" value="2" />
          <BoxStat name="Experience" value="2" />
        </div> -->
      </div>
    </div>
    <div class="flex flex-col mx-auto mt-8">
      <h2 class="text-xl text-center mb-8">Skills</h2>
      <SkillsScroller client:visible/>
    </div>
  </div>
</Layout>
