---
import { Icon } from "astro-icon/components";


---

<form class="flex flex-col justify-center items-center w-full gap-6">
  <div class="flex gap-6 w-full">
    <input
      placeholder="Your Email"
      type="email"
      id="email"
      name="email"
      class="bg-zinc-800 rounded-full w-1/2 p-2 placeholder:text-sm placeholder:uppercase text-sm text-zinc-100"
    />
    <input
      placeholder="Your Name"
      type="text"
      id="name"
      name="name"
      class="bg-zinc-800 rounded-full w-1/2 p-2 placeholder:text-sm placeholder:uppercase text-sm text-zinc-100"
    />
  </div>
  <input
    placeholder="Subject"
    type="text"
    id="subject"
    name="subject"
    class="bg-zinc-800 rounded-full w-full p-2 placeholder:text-sm placeholder:uppercase text-sm text-zinc-100"
  />
  <textarea
    placeholder="Your Message"
    id="message"
    name="message"
    class="bg-zinc-800 rounded-lg w-full h-40 p-2 placeholder:text-sm placeholder:uppercase text-sm text-zinc-100"
  ></textarea>
  <div
    class="flex items-center gap-3 border relative border-amber-500 rounded-3xl pl-4 self-end cursor-pointer
        before:h-full before:w-0 before:block before:absolute before:bg-amber-500 before:-z-10 before:right-0 before:top-0 before:transition-all hover:before:w-full
        before:rounded-3xl"
  >
    <p>Send Message</p>
    <div
      class="w-10 h-10 rounded-full bg-amber-500 p-3 flex justify-center items-center"
    >
      <Icon name="PrimeSend" class="text-2xl" />
    </div>
  </div>
</form>
